<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adam.project2.MainActivity">

    <Button
        android:id="@+id/hunterBtn"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/healerBtn"
        android:layout_alignStart="@+id/healerBtn"
        android:layout_below="@+id/healerBtn"
        android:layout_marginTop="29dp"
        android:text="@string/hunterClass" />

    <Button
        android:id="@+id/healerBtn"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mageBtn"
        android:layout_alignStart="@+id/mageBtn"
        android:layout_below="@+id/mageBtn"
        android:layout_marginTop="25dp"
        android:text="@string/healerClass" />

    <Button
        android:id="@+id/mageBtn"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/warriorBtn"
        android:layout_alignStart="@+id/warriorBtn"
        android:layout_below="@+id/warriorBtn"
        android:layout_marginTop="34dp"
        android:text="@string/mageClass" />

    <Button
        android:id="@+id/warriorBtn"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appTitleText"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="50dp"
        android:text="@string/warriorClass" />

    <TextView
        android:id="@+id/appTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/paladinBtn"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hunterBtn"
        android:layout_alignStart="@+id/hunterBtn"
        android:layout_below="@+id/hunterBtn"
        android:layout_marginTop="29dp"
        android:text="@string/paladinClass" />

    <fragment
        android:id="@+id/statsFragment"
        android:name="com.adam.project2.StatsFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/appTitleText"
        android:layout_toRightOf="@+id/appTitleText"
        tools:layout="@layout/stats_fragment" />


</RelativeLayout>
