    <!--</android.support.design.widget.AppBarLayout>-->

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="@string/titleStr" />

    <Button
        android:id="@+id/btnImgFrGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="@string/btn_gallery_str" />

    <ImageView
        android:id="@+id/previewImg"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginTop="37dp"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_below="@+id/previewLabel"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/previewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previewLabel_str"
        android:layout_below="@+id/btnImgFrGallery"
        android:layout_toLeftOf="@+id/title"
        android:layout_toStartOf="@+id/title"
        android:layout_marginTop="59dp" />

    <Button
        android:id="@+id/makeMemeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="51dp"
        android:text="@string/makeMemeBtn_str"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/settingsFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_preferences"
        android:layout_alignBottom="@+id/title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
